<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.mycode.messmaster.HelloController">
    <Label text="Add Student Record" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10" alignment="center">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Enrollment Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="enrollmentDateField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                    prefWidth="200"/>

        <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Department ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="departmentIdField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                  prefWidth="200"/>

        <Label text="Class Name:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="classNameField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                  prefWidth="200"/>

    </GridPane>
    <HBox spacing="10" alignment="center">
        <Button text="Save" onAction="#handleSaveAction"/>
        <Button text="Cancel" onAction="#handleCancelAction"/>
    </HBox>
</VBox>
